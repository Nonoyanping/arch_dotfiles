# Minimal Ghostty Configuration for tmux
# Save as: ~/.config/ghostty/config

# Use default material darker theme
# theme = MaterialDarker

# Window appearance
window-decoration = false
background-opacity = 0.75
background-blur-radius = 20
window-padding-x = 0
window-padding-y = 0

# Font configuration  
font-family = VictorMono NF SemiBold
font-family-bold = VictorMono NF SemiBold
font-family-italic = VictorMono NF Bold Italic
font-family-bold-italic = VictorMono NF SemiBold Italic

font-style-bold = true
font-style-italic = true
font-style-bold-italic = true
font-thicken = true
font-thicken-strength = 50
font-size = 13

# Terminal features
scrollback-limit = 10000
mouse-shift-capture = false
mouse-hide-while-typing = true
copy-on-select = false

# Disable all Ghostty keybindings since we're using tmux
# keybind = clear
keybind = ctrl+shift+r=reload_config
# keybind = ctrl+shift+return=fullscreen

# Cursor configuration
cursor-style = block
cursor-style-blink = true
cursor-opacity = 0.75

# Performance settings
auto-update = check

# Integration settings - disable since tmux handles it
shell-integration = none

# Misc
confirm-close-surface = false
quit-after-last-window-closed = true

fullscreen = true
maximize
# maximize = true
window-inherit-working-directory = true
